<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/ttbar"
        layout="@layout/layout_toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ttbar">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/wrker"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/ic_editprofile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit_profile"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:layout_margin="10dp"
            android:background="@color/blue"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/name"
                android:layout_marginTop="2dp"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textColor="@color/grey"
            android:textSize="8pt"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/tx_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginLeft="20pt"
            android:layout_marginTop="2dp"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/phone"
                android:layout_marginTop="2dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No. : "
                android:textColor="@color/grey"
                android:textSize="8pt"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tx_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">


            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/email"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Mail : "
                android:textColor="@color/grey"
                android:textSize="8pt"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tx_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="19pt"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:src="@drawable/home"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:textColor="@color/grey"
                android:textSize="8pt"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tx_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="12.44pt"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:layout_margin="10dp"
            android:background="@color/blue"
            />

    </LinearLayout>


</RelativeLayout>